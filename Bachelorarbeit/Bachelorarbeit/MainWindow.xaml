<Window x:Class="Bachelorarbeit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bachelorarbeit"
        mc:Ignorable="d"
        Title="Bachelorarbeit" Width="719" Height="651">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Datei"></MenuItem>
            <MenuItem Header="Bearbeiten"></MenuItem>
            <MenuItem Header="Ansicht"></MenuItem>
            <MenuItem Header="Hilfe"></MenuItem>
        </Menu>
        <TabControl DockPanel.Dock="Top" TabStripPlacement="Left">
            <TabItem Header="Kunden" Height="80">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="180"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="180"/>
                    </Grid.ColumnDefinitions>
                    <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                        <GroupBox Header="Kunden" Margin="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <GroupBox Grid.Row="0" Header="🔍 Suche" Margin="1">
                                    <TextBox Margin="1"></TextBox>
                                </GroupBox>
                                <GroupBox Grid.Row="1" Margin="1" Header="Kundenliste">
                                    <DataGrid Margin="1">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Kundennummer"></DataGridTextColumn>
                                            <DataGridTextColumn Header="Nachname"></DataGridTextColumn>
                                            <DataGridTextColumn Header="Vorname"></DataGridTextColumn>
                                            <DataGridTextColumn Header="Firma"></DataGridTextColumn>
                                            <DataGridTextColumn Header="Ort"></DataGridTextColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </GroupBox>
                                <GroupBox Grid.Row="2" Header="Aktionen">
                                    <Grid Margin="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="0" Content="Kunden&#xa;anlegen" Margin="1" MaxWidth="180"/>
                                        <Button Grid.Column="1" Content="Kunden&#xa;bearbeiten" Margin="1" MaxWidth="180" IsEnabled="False"/>
                                        <Button Grid.Column="2" Content="Kunden&#xa;löschen" Margin="1" MaxWidth="180" IsEnabled="False"/>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </GroupBox>
                    </ScrollViewer>

                    <GridSplitter Grid.Column="1" Width="7" ResizeDirection="Columns" HorizontalAlignment="Stretch" Background="LightGray" BorderBrush="White" BorderThickness="3" Margin="1"/>

                    <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                            <GroupBox Grid.Column="0" Header="Kunde" Margin="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <GroupBox Grid.Row="0" Header="Identifikation" Margin="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" Margin="1">Kundennummer</Label>
                                            <TextBox Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Grid.Row="1" Header="Adresse" Margin="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Row="0" Grid.Column="0" Margin="1">Anrede</Label>
                                            <ComboBox Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="1">
                                                <ComboBoxItem>Herr</ComboBoxItem>
                                                <ComboBoxItem>Frau</ComboBoxItem>
                                                <ComboBoxItem>Firma</ComboBoxItem>
                                            </ComboBox>
                                            <Label Grid.Row="1" Grid.Column="0" Margin="1">Vorname</Label>
                                            <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                            <Label Grid.Row="2" Grid.Column="0" Margin="1">Nachname</Label>
                                            <TextBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                            <Label Grid.Row="3" Grid.Column="0" Margin="1">Firma</Label>
                                            <TextBox Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                            <Label Grid.Row="4" Grid.Column="0" Margin="1">Straße</Label>
                                            <TextBox Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                            <Label Grid.Row="5" Grid.Column="0" Margin="1">Postleitzahl</Label>
                                            <TextBox Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                            <Label Grid.Row="6" Grid.Column="0" Margin="1">Ort</Label>
                                            <TextBox Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                            <Label Grid.Row="7" Grid.Column="0" Margin="1">Land</Label>
                                            <TextBox Grid.Row="7" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Grid.Row="2" Header="Kontakt" Margin="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Row="0" Grid.Column="0" Margin="1">Telefon</Label>
                                            <TextBox Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                            <Label Grid.Row="1" Grid.Column="0" Margin="1">Telefax</Label>
                                            <TextBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                            <Label Grid.Row="2" Grid.Column="0" Margin="1">Mobiltelefon</Label>
                                            <TextBox Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                            <Label Grid.Row="3" Grid.Column="0" Margin="1">E-Mail</Label>
                                            <TextBox Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                            <Label Grid.Row="4" Grid.Column="0" Margin="1">Webseite</Label>
                                            <TextBox Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalContentAlignment="Stretch" Margin="1"/>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Grid.Row="3" Header="Sonstiges" Margin="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="22"/>
                                                <ColumnDefinition Width="78"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" Margin="1" Grid.ColumnSpan="2">Notizen</Label>
                                            <RichTextBox Grid.Column="2" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" Margin="1"/>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Grid.Row="4" Margin="1" Header="Aktionen">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Button Grid.Column="0" Margin="1" MaxWidth="180" IsDefault="True" IsEnabled="False">Speichern</Button>
                                            <Button Grid.Column="1" Margin="1" MaxWidth="180" IsCancel="True">Abbrechen</Button>
                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Rechnungen" Height="80">
            </TabItem>
            <TabItem Header="Angebote" Height="80">
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
