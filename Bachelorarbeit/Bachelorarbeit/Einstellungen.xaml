<Window x:Class="Bachelorarbeit.Einstellungen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bachelorarbeit"
        mc:Ignorable="d"
        Title="Einstellungen" Height="500" Width="640" MinWidth="640" MinHeight="500" MaxHeight="500" MaxWidth="640"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" TabStripPlacement="Left">
            <TabItem Header="Allgemeines" Height="40">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <GroupBox Header="Allgemeine Einstellungen" Margin="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" MinWidth="40"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Grid.Row="0" Margin="1" Content="Standardmehrwertsteuersatz"/>
                            <TextBox Grid.Column="1" Grid.Row="0" Margin="1" VerticalAlignment="Center" HorizontalContentAlignment="Right">19</TextBox>
                            <Label Grid.Column="2" Grid.Row="0" Margin="1">%</Label>
                            <Label Grid.Column="0" Grid.Row="1" Margin="1">Standardland für Kunden</Label>
                            <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Margin="1" VerticalAlignment="Center">Deutschland</TextBox>

                            <Label Grid.Column="0" Grid.Row="2" Margin="1">Speicherort für PDF Rechnungen</Label>
                            <TextBox Grid.Column="1" Grid.Row="2" Margin="1" VerticalAlignment="Center" Grid.ColumnSpan="2"></TextBox>
                            <Button Grid.Column="3" Grid.Row="2" Margin="1" VerticalAlignment="Center">Durchsuchen</Button>
                            <Label Grid.Column="0" Grid.Row="3" Margin="1">Speicherort für PDF Angebote</Label>
                            <TextBox Grid.Column="1" Grid.Row="3" Margin="1" VerticalAlignment="Center" Grid.ColumnSpan="2"></TextBox>
                            <Button Grid.Column="3" Grid.Row="3" Margin="1" VerticalAlignment="Center">Durchsuchen</Button>
                        </Grid>
                    </GroupBox>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Firmendaten" Height="40">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <GroupBox Header="Firmendaten Einstellungen" Margin="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Grid.Column="0" Grid.Row="0" Margin="1">Firmenname</Label>
                            <TextBox x:Name="firmenname" Grid.Column="1" Grid.Row="0" Margin="1" VerticalAlignment="Center"></TextBox>
                            <TextBlock Grid.Row="0" Grid.Column="1" IsHitTestVisible="False" Text="z.B. Musterfirma" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4,1,1,1" Foreground="LightGray">
                                <TextBlock.Style>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, ElementName=firmenname}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Label Grid.Column="0" Grid.Row="1" Margin="1">Inhaber</Label>
                            <TextBox x:Name="inhaber" Grid.Column="1" Grid.Row="1" Margin="1" VerticalAlignment="Center"/>
                            <Label Grid.Column="0" Grid.Row="2" Margin="1">Straße</Label>
                            <TextBox x:Name="strasse" Grid.Column="1" Grid.Row="2" Margin="1" VerticalAlignment="Center"></TextBox>
                            <Label Grid.Column="0" Grid.Row="3" Margin="1">Postleitzahl</Label>
                            <TextBox x:Name="postleitzahl" Grid.Column="1" Grid.Row="3" Margin="1" VerticalAlignment="Center"></TextBox>
                            <Label Grid.Column="0" Grid.Row="4" Margin="1">Ort</Label>
                            <TextBox x:Name="ort" Grid.Column="1" Grid.Row="4" Margin="1" VerticalAlignment="Center"></TextBox>
                            <Label Grid.Column="0" Grid.Row="5" Margin="1">Land</Label>
                            <TextBox x:Name="land" Grid.Column="1" Grid.Row="5" Margin="1" VerticalAlignment="Center"></TextBox>
                            <Label Grid.Column="0" Grid.Row="6" Margin="1">Telefon</Label>
                            <TextBox x:Name="telefon" Grid.Column="1" Grid.Row="6" Margin="1" VerticalAlignment="Center"></TextBox>
                            <Label Grid.Column="0" Grid.Row="7" Margin="1">Telefax</Label>
                            <TextBox x:Name="telefax" Grid.Column="1" Grid.Row="7" Margin="1" VerticalAlignment="Center"></TextBox>
                            <Label Grid.Column="0" Grid.Row="8" Margin="1">E-Mail</Label>
                            <TextBox x:Name="email" Grid.Column="1" Grid.Row="8" Margin="1" VerticalAlignment="Center"></TextBox>
                            <Label Grid.Column="0" Grid.Row="9" Margin="1">Webseite</Label>
                            <TextBox x:Name="webseite" Grid.Column="1" Grid.Row="9" Margin="1" VerticalAlignment="Center"></TextBox>
                            <Label Grid.Column="0" Grid.Row="10" Margin="1">USt-IdNr.</Label>
                            <TextBox x:Name="ustidnr" Grid.Column="1" Grid.Row="10" Margin="1" VerticalAlignment="Center"></TextBox>
                            <Label Grid.Column="0" Grid.Row="11" Margin="1">IBAN</Label>
                            <TextBox x:Name="iban" Grid.Column="1" Grid.Row="11" Margin="1" VerticalAlignment="Center"></TextBox>
                            <Label Grid.Column="0" Grid.Row="12" Margin="1">BIC</Label>
                            <TextBox x:Name="bic" Grid.Column="1" Grid.Row="12" Margin="1" VerticalAlignment="Center"></TextBox>
                        </Grid>
                    </GroupBox>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        <GroupBox Grid.Row="1" Header="Aktionen" Margin="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="speichern" Grid.Column="0" IsDefault="True" MaxWidth="160" Margin="1" Click="Speichern">Speichern</Button>
                <Button Grid.Column="1" IsCancel="True" MaxWidth="160" Margin="1">Abbrechen</Button>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
